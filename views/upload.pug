extends layouts/main 

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="file") Video File
            input(type="file", id="file", name="file", requrired=true)
            input(type="text", placeholder="Title", name="title", requrired=true)
            textarea(name="description", placeholder="Descripiton", requrired=true)
            input(type="submit", value="Upload Video")